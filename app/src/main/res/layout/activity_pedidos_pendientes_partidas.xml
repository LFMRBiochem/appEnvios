<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedidosPendientesPartidas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNPed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Pedido: "
            android:textSize="26dp" />

        <TextView
            android:id="@+id/tvNFac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Factura: "
            android:textSize="26dp" />

        <Button
            android:id="@+id/btnRecibe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/verdeCaca"
            android:gravity="center"
            android:text="Firmar de recibido"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnSimple"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Vista simple"
                android:layout_marginRight="35dp"
                android:backgroundTint="@color/azulPlaya"
                android:textColor="#fff"
                android:textSize="19dp"/>
            <Button
                android:id="@+id/btnDetallada"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Vista detallada"
                android:backgroundTint="@color/moradoMarica"
                android:textColor="#fff"
                android:textSize="18dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Detalle de la factura"
            android:textSize="25dp" />


        <ListView
            android:id="@+id/lvDetalleFactura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="7dp"
            android:visibility="gone"></ListView>

        <ListView
            android:id="@+id/lvFactura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="7dp"
            android:visibility="visible"></ListView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>