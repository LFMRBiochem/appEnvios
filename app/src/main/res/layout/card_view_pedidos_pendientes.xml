<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_almacen"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvFactura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Factura: "
            android:layout_toRightOf="@+id/img_almacen"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/tvPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedido: "
            android:layout_below="@+id/tvFactura"
            android:layout_toRightOf="@+id/img_almacen"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/tvCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente: "
            android:layout_below="@+id/tvPedido"
            android:layout_toRightOf="@+id/img_almacen"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tvAgente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agente: "
            android:layout_below="@+id/tvCliente"
            android:layout_toRightOf="@+id/img_almacen"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/tvAlmacen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AlmacÃ©n de salida: "
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:textSize="19dp"
            android:layout_below="@+id/tvAgente"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>