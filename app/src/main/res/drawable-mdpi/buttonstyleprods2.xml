<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1D4465" />
            <gradient android:angle="-90" android:startColor="#1D4465" android:endColor="#1D4465"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#337AB7" />
            <solid android:color="#337AB7"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#337AB7" />
            <gradient android:angle="-90" android:startColor="#1F5F93" android:endColor="#1F5F93" />
        </shape>
    </item>
</selector>